# Puerto del servidor
PORT=4000

# Base de datos MySQL
DB_HOST=tu_host
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=tu_password
DB_NAME=tu_basededatos

# Configuración de TypeORM
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Configuración de la aplicación
NODE_ENV=development

# Configuración de CORS
CORS_ORIGIN=https://reymillenium.github.io

# JWT Secret (si se usa autenticación)
JWT_SECRET=tu_jwt_secret_muy_seguro

# Configuración de archivos
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760

# Configuración de logs
LOG_LEVEL=debug 

# Configuración SSO
AUTH_SERVICE_URL=http://localhost:5051/api/auth
UTASSETS_FRONTEND_URL=http://localhost:3000/utassets
COSTCONTROL_FRONTEND_URL=http://localhost:5173/costcontrol

# Slack (opcional)
SLACK_BOT_TOKEN=tu_slack_bot_token
SLACK_CHANNEL_ID=tu_slack_channel_id 